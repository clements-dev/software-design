

<div class="container">
  <div class="row">
    <div class="col-sm-8">
        <p>
            <h3>
                <i class="far fa-calendar-alt">
                </i>&ensp;<%= @event[:date] %>
            </h3>
        </p>
        <p>
            <h1><%= @event[:title] %></h1>
        </p>
        <p><%= @event[:description] %></p>
        <p><h3>RSVPs</h3></p>
        <p><h2><i class="fas fa-thumbs-up"></i></h2></p>
        <p><h2><i class="fas fa-thumbs-down"></i></h2></p>

        <p>
            <div class="media">
                <p><i class="fas fa-thumbs-up fa-3x">&ensp;</i></p>
                <div class="media-body">
                    <h5 class="mt-0">Someone</h5>
                    <p>Comment.</p>
                </div>
            </div>
        </p>

        <p><a href="/events/<%= @event[:id] %>/rsvps/new" class="btn btn-primary btn active" role="button" aria-pressed="true">RSVP now!</a></p>
    </div>
    <div class="col-sm-4">
        <p><h3>When?</h3></p>
        <p><%= @event[:date] %></p>
        <p><h3>Where?</h3></p>
        <p><%= @event[:location] %></p>
        <p><h3>How many guests so far?</h3></p>
        <p><h4><i class="fas fa-thumbs-up"></i></h4></p>
    </div>
  </div>
</div>